// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Inventory {
  id            Int        @id @default(autoincrement())
  name          String


  // connection
  employee_data Employee[]
  storage_data Storage[]
}

enum type_of_employee {
  admin
  manager
}

model Employee {
  id           Int              @id @default(autoincrement())
  email        String           @unique
  password     String
  contact      String
  role         type_of_employee

  
  // mapping
  inventory    Inventory        @relation(fields: [inventory_id], references: [id])
  inventory_id Int
}


model Storage{
    id           Int              @id @default(autoincrement())
    name String
    address String
    capacity Int 
    category String

    // mapping
      inventory    Inventory        @relation(fields: [inventory_id], references: [id])
  inventory_id Int
}

